unit = input("Is this temperture in Celsius or Fahrenheit (C/F): ")
temp = float(input("Enter the temperture: "))

if unit == "C":
    temp = round((9 * temp) / 5 + 32, 1)
    print(f"The temperture in Fahrenheit is: {temp}")
elif unit == "F":
    temp = round((temp - 32) * 5 / 9, 1)
    print(f"The temperture in Celsius is: {temp}")
else:
    print(f"{unit} is an invalid unit of measurement")
